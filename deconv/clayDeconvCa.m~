function [s] = clayDeconvCa(ca, toPlot);

%% USAGE: [s] = clayDeconvCa(ca, toPlot);
% Clay 2018
% Wrapper script =f


model = 'ar2';  % autoregressive model of convolution kernel

[c, s, options] = deconvolveCa(ca, model); %, varargin);


% plot if you want to check performance
if toPlot
    figure;
    plot(ca);
    hold on;
    plot(c,'g');
    plot(s*20,'r');
end
